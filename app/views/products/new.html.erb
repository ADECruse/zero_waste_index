<% provide(:title, 'New Product') %>
<h1>New Product</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= f.label :item %>
      <%= f.text_field :item %>

      <%= f.label :packaging %>
      <%= f.text_field :packaging %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.submit "Enter new product", class: "btn btn-light" %>
    <% end %>
  </div>
</div>
